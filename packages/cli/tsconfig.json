{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist/",
    "plugins": [
      { "name": "typescript-babel" }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
