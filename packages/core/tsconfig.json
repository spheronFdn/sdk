{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "types",
    "rootDir": "./src",
    "outDir": "./dist/"
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["node_modules"]
}
